<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Dictionary {% block title %}Welcome!{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/app.css') }}">
    {% endblock %}
</head>
<body>
<nav class="top-nav navbar navbar-expand-lg navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
    <div class="top-nav-links">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" target="_blank" rel="noopener" href="http://api.local/doc">Documentation</a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-bs-toggle="dropdown"
                   aria-haspopup="true" aria-expanded="false">
                    Dictionaries
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item" href="http://api.local/admin/dict/branch">Branches</a>
                    <a class="dropdown-item" href="http://api.local/admin/dict/adjuster">Adjusters</a>
                    <a class="dropdown-item" href="#">Something else here</a>
                </div>
            </li>
        </ul>
    </div>
    <div class="top_nav_links_right">
        {% block top_nav_links_right %}{% endblock %}
    </div>
</nav>
<main role="main" class="main mt-5">
    <div class="container">
        {% block body %}{% endblock %}
    </div>
</main>

{% block javascripts %}
    <script src="{{ asset('assets/js/popper.min.js') }}"></script>
    <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
{% endblock %}
</body>
</html>
