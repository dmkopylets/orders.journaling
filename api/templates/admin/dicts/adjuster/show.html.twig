{% endblock %}

{% block title %}Adjuster{% endblock %}

{% block body %}
    <h1>Adjuster</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ adjuster.id }}</td>
            </tr>
            <tr>
                <th>Branch</th>
                <td>{{ adjuster.branch.body }}, branch_id={{ adjuster.branch.id }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ adjuster.body }}</td>
            </tr>
            <tr>
                <th>Group</th>
                <td>{{ adjuster.inGroup }}</td>
            </tr>
        </tbody>
    </table>

    <div class="form-buttons d-flex justify-content-between mt-4">
        <a href="{{ path('admin_dict_adjuster_edit', {'id': adjuster.id}) }}" class="btn btn-secondary btn-sm">Edit</a>
    <div>
    {{ include('admin/dicts/adjuster/_delete_form.html.twig') }}
    </div>
    </div>
{% endblock %}
